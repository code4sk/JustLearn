<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayout"
        android:background="@color/emerald"
        xmlns:android="http://schemas.android.com/apk/res/android"
>

    <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp" app:srcCompat="@drawable/icon_just_learn_white"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:background="@drawable/rounded_search"
            android:onClick="launchSearchWordActivity"
            android:layout_marginTop="80dp">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_search_black_24dp"
                android:id="@+id/imageView3"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
                android:onClick="launchSearchWordActivity"
                android:clickable="true" android:scaleType="fitCenter"/>
        <TextView
                android:text="Search"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:id="@+id/textView"
                android:onClick="launchSearchWordActivity"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textAlignment="center" app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="8dp" android:capitalize="none"
                android:paddingTop="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>